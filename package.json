{
	"private": true,
	"workspaces": [
		"packages/ts-oauth2-server",
		"packages/mdvue",
		"packages/website"
	],
	"scripts": {
		"build-dep-oauth": "yarn workspace @jmondi/oauth2-server run build",
		"build-dep-mdvue": "yarn workspace @ioclub/mdvue run build",
		"build-dep": "concurrently yarn:build-dep-*",
		"build": "yarn workspaces run build",
		"dev": "yarn workspace @ioclub/website run dev",
		"postinstall": "patch-package --exclude 'IAmNotARealFile.txt'"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^4.32.0",
		"@typescript-eslint/parser": "^4.32.0",
		"concurrently": "^6.2.2",
		"eslint": "^7.32.0",
		"eslint-plugin-simple-import-sort": "^7.0.0",
		"patch-package": "^6.4.7",
		"typescript": "^4.4.3",
		"unbuild": "^0.5.5"
	}
}
